<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.pixelnx.sam.jobportal.Fragment.SeekerUpdateProfileFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.pixelnx.sam.jobportal.utils.CustomTextSubHeader
            android:id="@+id/tvUsername"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/header_bg"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/splash_bg" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/IVimage"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_marginTop="-60dp"
            android:src="@drawable/cemra" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:orientation="vertical">

            <com.pixelnx.sam.jobportal.utils.CustomTextview
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="GENDER"
                android:textAlignment="viewStart" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp">

                <RadioGroup
                    android:id="@+id/RGGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/RBmale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="0.04"
                        android:text="Male"
                        android:textColor="@color/colorPrimary" />

                    <RadioButton
                        android:id="@+id/RBfemale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="0.04"
                        android:text="Female"
                        android:textColor="@color/colorPrimary" />
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:orientation="vertical">

                <com.pixelnx.sam.jobportal.utils.CustomTextview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EMAIL" />

                <com.pixelnx.sam.jobportal.utils.CustomEdittext
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:editable="false" />


                <com.pixelnx.sam.jobportal.utils.CustomTextview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="YOUR NAME" />


                <com.pixelnx.sam.jobportal.utils.CustomEdittext
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:editable="false" />


                <com.pixelnx.sam.jobportal.utils.CustomTextview

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="MOBILE NO." />

                <com.pixelnx.sam.jobportal.utils.CustomEdittext
                    android:id="@+id/etMobile"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:editable="false" />

                <com.pixelnx.sam.jobportal.utils.CustomTextview

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="CURRENT ADDRESS *" />

                <com.pixelnx.sam.jobportal.utils.CustomEdittext
                    android:id="@+id/etCurrentAddress"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="text" />

                <com.pixelnx.sam.jobportal.utils.CustomTextview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="PREFERED LOCATION *" />

                <Spinner
                    android:id="@+id/SpPrefLoc"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textSize="12sp" />

                <com.pixelnx.sam.jobportal.utils.CustomTextview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="JOB TYPE *" />

                <Spinner
                    android:id="@+id/SpJobType"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textSize="12sp" />

                <com.pixelnx.sam.jobportal.utils.CustomTextview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="QUALIFICATION *" />

                <Spinner
                    android:id="@+id/SpQualification"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textSize="12sp" />

                <com.pixelnx.sam.jobportal.utils.CustomTextview

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="YEAR OF PASSING *" />

                <com.pixelnx.sam.jobportal.utils.CustomEdittext
                    android:id="@+id/etPassYear"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:editable="false" />

                <com.pixelnx.sam.jobportal.utils.CustomTextview

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="PERCENTAGE/CGPA *" />

                <com.pixelnx.sam.jobportal.utils.CustomEdittext
                    android:id="@+id/etCgpa"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="numberDecimal"
                    android:singleLine="true"/>


                <com.pixelnx.sam.jobportal.utils.CustomTextview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="AREA OF SECTOR *" />

                <Spinner
                    android:id="@+id/SpAreaOfSector"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textSize="12sp" />


                <com.pixelnx.sam.jobportal.utils.CustomTextview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="WORK EXPERIENCE *" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp">

                    <RadioGroup
                        android:id="@+id/RGExperience"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/RBFresher"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_weight="0.04"
                            android:text="Fresher"
                            android:textColor="@color/colorPrimary" />

                        <RadioButton
                            android:id="@+id/RBExperinced"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="0.04"
                            android:text="Experienced"
                            android:textColor="@color/colorPrimary" />
                    </RadioGroup>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LLexperince"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <com.pixelnx.sam.jobportal.utils.CustomTextview
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="TOTAL EXPERIENCE YEAR *" />

                    <Spinner
                        android:id="@+id/SpTotalExperienceYear"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textSize="12sp" />

                    <com.pixelnx.sam.jobportal.utils.CustomTextview
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="TOTAL EXPERIENCE MONTH *" />

                    <Spinner
                        android:id="@+id/SpExperienceinMonth"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textSize="12sp" />

                    <com.pixelnx.sam.jobportal.utils.CustomTextview
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="SPECIALIZATION *" />

                    <Spinner
                        android:id="@+id/SpSpecialization"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textSize="12sp" />

                    <com.pixelnx.sam.jobportal.utils.CustomTextview
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="ROLE TYPE *" />

                    <Spinner
                        android:id="@+id/SpRoleType"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textSize="12sp" />

                    <com.pixelnx.sam.jobportal.utils.CustomTextview

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="CERTIFICATION *" />

                    <com.pixelnx.sam.jobportal.utils.CustomEdittext
                        android:id="@+id/etCertification"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:singleLine="true"
                        android:inputType="text" />

                </LinearLayout>


                <com.pixelnx.sam.jobportal.utils.CustomTextview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="UPLOAD RESUME *" />

                <com.pixelnx.sam.jobportal.utils.CustomEdittext
                    android:id="@+id/etFileUpload"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:drawablePadding="30dp"
                    android:drawableRight="@drawable/upload"
                    android:editable="false" />


                <com.pixelnx.sam.jobportal.utils.CustomButton
                    android:id="@+id/btnUpdate"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_background"
                    android:text="UPDATE"
                    android:textColor="@color/white" />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</ScrollView>
