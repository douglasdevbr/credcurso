<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.pixelnx.sam.jobportal.Fragment.SeekerUpdateProfileFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.pixelnx.sam.jobportal.utils.CustomTextSubHeader
            android:id="@+id/tvUsername"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/header_bg"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/splash_bg" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivLogoOrg"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_marginTop="-60dp"
            android:src="@drawable/cemra" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:orientation="vertical">

            <com.pixelnx.sam.jobportal.utils.CustomTextview
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="I AM A  *" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp">


                <RadioGroup
                    android:id="@+id/rgTypeRec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbCompany"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="0.05"
                        android:text="Company"
                        android:textColor="@color/colorPrimary" />

                    <RadioButton
                        android:id="@+id/rbConsultant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="0.05"
                        android:text="Consultant"
                        android:textColor="@color/colorPrimary" />
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:orientation="vertical">


                <com.pixelnx.sam.jobportal.utils.CustomTextview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="ORGANIZATION LOCATION *" />


                <com.pixelnx.sam.jobportal.utils.CustomEdittext
                    android:id="@+id/etOrgLoc"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ .," />

                <com.pixelnx.sam.jobportal.utils.CustomTextview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="ORGANIZATION ADDRESS *" />


                <com.pixelnx.sam.jobportal.utils.CustomEdittext
                    android:id="@+id/etOrgAddress"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="text" />

                <com.pixelnx.sam.jobportal.utils.CustomTextview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="ORGANIZATION WEBSITE *" />


                <com.pixelnx.sam.jobportal.utils.CustomEdittext
                    android:id="@+id/etOrgWebsite"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ. ,"
                    android:inputType="textFilter" />

                <com.pixelnx.sam.jobportal.utils.CustomTextview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="ORGANIZATION DESCRIPTION *" />


                <com.pixelnx.sam.jobportal.utils.CustomEdittext
                    android:id="@+id/etOrgDescription"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="text" />


                <com.pixelnx.sam.jobportal.utils.CustomButton
                    android:id="@+id/btnUpdate"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_background"
                    android:text="Update"
                    android:textColor="@color/white" />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</ScrollView>
